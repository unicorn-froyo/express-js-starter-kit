{
  "name": "express-js-starter-kit",
  "version": "1.1.0",
  "description": "This project is created as a template for node.js web apps",
  "main": "src/server.js",
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-node": "0.0.1-security",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "commitizen": "^4.0.3",
    "commitlint": "^8.3.5",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsdoc": "^20.3.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.3",
    "standard-version": "^8.0.1",
    "typescript": "^3.7.5",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-node-externals": "^1.7.2",
    "yarn": "^1.22.0"
  },
  "scripts": {
    "test": "npx jest",
    "build": "npx webpack",
    "start:dev": "npx nodemon src/server.js",
    "commit": "npx git-cz",
    "first-release": "npm run release -- --first-release",
    "release": "npx standard-version --preset angular",
    "lint:eslint": "npx eslint .",
    "lint:ci": "npm run lint:eslint -- --debug",
    "lint:prettier": "npx prettier \"**/*.*\" --config .prettierrc.yaml --ignore-path .prettierignore",
    "lint:prettier:fix": "npm run lint:prettier -- --write \"**/*.*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unicorn-froyo/node-js-starter-kit.git"
  },
  "author": "Collin Miller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unicorn-froyo/node-js-starter-kit/issues"
  },
  "homepage": "https://github.com/unicorn-froyo/node-js-starter-kit#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:eslint && npx pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "globals": {
      "babel-jest": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "nodemonConfig": {
    "env": {
      "APPLICATION_ENV": "prod",
      "NODE_ENV": "production",
      "APP_PORT": "3000"
    },
    "ext": "js,ts",
    "execMap": {
      "js": "babel-node"
    },
    "watch": [
      "src/"
    ]
  }
}
